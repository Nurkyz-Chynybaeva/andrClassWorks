<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F68888">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt1F1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="this is Fragment1"
        android:textColor="@color/black"
        android:textSize="29sp"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editF1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="send text to activity"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/txt1F1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnFM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="send"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editF1" />


</androidx.constraintlayout.widget.ConstraintLayout>